{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}

    {{ form_start(form) }}
    {{ form_row(form.searchField) }}
    <button class="btn btn-primary" type="submit" name="btnSearch">Search</button>
    {{ form_end(form) }}


    <h1>Toutes les séries de la table program : </h1>
    {% for program in programs %}

        {% set slug = program.title|lower|trim|replace({' ' : '-'}) %}

        <div>
            <h2> <a style="color: black" href="{{ path('wild_show', { 'slug': slug }) }}">{{ loop.index }} / {{ program.title }} - Catégorie :
                    {{ program.category.name }} </a></h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}