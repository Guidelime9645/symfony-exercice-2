{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Programs</th>
                <td>
                    {% for program in actor.programs %}
                        {% set slug = program.title|lower|trim|replace({' ' : '-'}) %}
                        <a href="{{path('wild_program', {'programTitle': slug})}} ">{{ program.title }}</a>,
                    {% else %}
                        Aucun acteur pour cette s√©rie
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('actor_index') }}">back to list</a>

    <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
